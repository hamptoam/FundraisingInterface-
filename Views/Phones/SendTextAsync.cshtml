@model Fundraising_Capstone2.Models.Phone

@{
    ViewBag.Title = "SendTextAsync";
}

<h2>SendTextAsync</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>OutgoingText</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    @Html.TextBoxFor(model => model.outgoingText, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.ValidationMessageFor(model => model.outgoingText, "", new { @class = "text-danger" })
    </div>
</div>
    @Html.HiddenFor(m => m.CalleeId)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Send Text" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
    