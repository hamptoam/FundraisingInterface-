
@{
    if (this.User.Identity.IsAuthenticated)
    {

        if (this.User.IsInRole("Employee"))
        {
            Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
        }
        else if (this.User.IsInRole("Manager"))
        {
            Layout = "~/Views/Shared/_ManagerLayout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
        }
    }
}




